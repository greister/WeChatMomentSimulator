<!-- SvgTemplateEditorWindow.xaml -->
<Window x:Class="WeChatMomentSimulator.Desktop.Views.SvgTemplateEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svg="clr-namespace:SharpVectors.Renderers.Wpf;assembly=SharpVectors.Wpf"
        xmlns:vm="clr-namespace:WeChatMomentSimulator.Desktop.ViewModels"
        xmlns:runtime="http://sharpvectors.codeplex.com/runtime/"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Title="SVG模板编辑器" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 缩放转换器 -->
        <ScaleTransform x:Key="ZoomTransform"
                        ScaleX="{Binding ZoomLevel}"
                        ScaleY="{Binding ZoomLevel}"/>
        
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- 编辑器样式 -->
        <Style TargetType="TextBox" x:Key="SvgEditorStyle">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧属性面板 -->
        <Border Grid.Column="0" Background="#F5F5F5">
            <StackPanel Margin="10">
                <TextBlock Text="缩放控制" FontWeight="Bold"/>
                <Slider Minimum="0.1" Maximum="10"
                        Value="{Binding ZoomLevel}"
                        TickFrequency="0.5"
                        Margin="0,5"/>

                <Button Content="放大 (+)"
                        Command="{Binding ZoomInCommand}"
                        Margin="0,5"/>
                <Button Content="缩小 (-)"
                        Command="{Binding ZoomOutCommand}"
                        Margin="0,5"/>

                <Button Content="编辑" 
                        Command="{Binding StartEditingCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
                            <Style.Triggers>
                                <!-- 当IsEditingMode为true时改变按钮背景色 -->
                                <DataTrigger Binding="{Binding IsEditingMode}" Value="True">
                                    <Setter Property="Background" Value="#E1F5FE"/>
                                    <Setter Property="BorderBrush" Value="#81D4FA"/>
                                </DataTrigger>
                                <!-- 鼠标悬停效果 -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#B3E5FC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="保存模板"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,10"/>
                
                <Button Content="打开模板"
                        Command="{Binding OpenCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- 分割条 -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

        <!-- 主编辑区 -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- SVG渲染视图 -->
            <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1">
                <ScrollViewer x:Name="SvgScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              Background="White">
                    <svgc:SvgCanvas x:Name="SvgRenderer"
                                          Source ="{Binding SvgSource}"
                                          SnapsToDevicePixels="True"
                                          UseLayoutRounding="True"
                                          TextOptions.TextFormattingMode="Display"
                                          TextOptions.TextRenderingMode="ClearType"
                                          RenderOptions.BitmapScalingMode="HighQuality"
                                          RenderOptions.ClearTypeHint="Enabled">
                        <svgc:SvgCanvas.RenderTransform>
                            <ScaleTransform x:Name="ZoomTransform"/>
                        </svgc:SvgCanvas.RenderTransform>
                    </svgc:SvgCanvas>
                </ScrollViewer>
            </Border>

            <!-- 代码编辑分割条 -->
            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"/>

            <!-- SVG源码编辑器 -->
            <TextBox Grid.Row="2"
                     Text="{Binding SvgSourceText, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource SvgEditorStyle}"
                     Visibility="{Binding IsEditingMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Window>