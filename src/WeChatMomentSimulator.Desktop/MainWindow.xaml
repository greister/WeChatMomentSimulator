<Window x:Class="WeChatMomentSimulator.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeChatMomentSimulator.Desktop"
        xmlns:viewModels="clr-namespace:WeChatMomentSimulator.Desktop.ViewModels"
        xmlns:views="clr-namespace:WeChatMomentSimulator.Desktop.Views"
        xmlns:converters="clr-namespace:WeChatMomentSimulator.Desktop.Converters"
        mc:Ignorable="d"
        Title="微信朋友圈模拟器" 
        Height="800" Width="1200" 
        MinHeight="700" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F7F7F7"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}">

    <Window.Resources>
        <!-- 转换器和样式定义 -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 菜单栏 -->
            <RowDefinition Height="60"/>    <!-- 顶部操作栏 -->
            <RowDefinition Height="*"/>     <!-- 主要内容 -->
            <RowDefinition Height="36"/>    <!-- 底部状态栏 -->
        </Grid.RowDefinitions>

        <!-- 菜单栏 - 使用独立视图 -->
        <views:MenuBarView Grid.Row="0" DataContext="{Binding}"/>

        <!-- 顶部导航栏 - 品牌与功能区 -->
        <Border Grid.Row="1" Background="White" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Image Source="/Assets/logo.png" Width="32" Height="32" VerticalAlignment="Center"/>
                    <TextBlock Text="微信朋友圈模拟器" FontSize="18" FontWeight="SemiBold" Margin="10,0,0,0"/>
                </StackPanel>
                
                <!-- 操作按钮组 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                    <Button Content="保存模板" Margin="10,0" Padding="15,5" Command="{Binding SaveTemplateCommand}"/>
                    <Button Content="导出图片" Margin="10,0" Padding="15,5" Background="#07C160" Foreground="White" Command="{Binding ExportImageCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主要内容 - 三栏设计：模板选择、编辑区、预览区 -->
        <Grid Grid.Row="2" Margin="15">
            <!-- 在这里保留您之前的内容布局 -->
            <!-- 由于篇幅限制，此处只显示Grid结构，完整内容见之前的代码 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>             <!-- 左侧模板列表 -->
                <ColumnDefinition Width="380"/>             <!-- 中间编辑区 -->
                <ColumnDefinition Width="*" MinWidth="320"/> <!-- 右侧预览区 -->
            </Grid.ColumnDefinitions>
            
            <!-- 左侧、中间和右侧面板内容保持不变 -->
            <!-- 此处从之前的代码复制 -->
        </Grid>

        <!-- 底部状态栏 -->
        <Border Grid.Row="3" Background="#F0F0F0" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Grid Margin="15,0">
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                <ProgressBar Width="100" Height="6" IsIndeterminate="{Binding IsLoading}" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0"/>
            </Grid>
        </Border>
        
        <!-- 错误消息覆盖层 -->
        <Border Grid.Row="2" 
                Background="#FFEEEE" 
                Padding="15,10"
                BorderBrush="#FFDDDD" 
                BorderThickness="1"
                CornerRadius="5"
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF4444"/>
        </Border>
    </Grid>
</Window>