<Window x:Class="WeChatMomentSimulator.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeChatMomentSimulator.Desktop"
        xmlns:views="clr-namespace:WeChatMomentSimulator.Desktop.Views"
        mc:Ignorable="d"
        Title="微信朋友圈模拟器" 
        Height="800" Width="1200" 
        MinHeight="700" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 菜单栏 -->
            <RowDefinition Height="*"/>
            <!-- 主要内容 -->
            <RowDefinition Height="36"/>
            <!-- 底部状态栏 -->
        </Grid.RowDefinitions>

        <!-- 菜单栏 -->
        <views:TestMenuBarView Grid.Row="0"/>

        <!-- 主要内容 - 三栏设计 -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <!-- 增加左侧用户设置宽度 -->
                <ColumnDefinition Width="320"/>
                <!-- 左侧用户设置 -->
                <ColumnDefinition Width="320" MinWidth="400"/>
                <!-- 中间内容设置 -->
                <ColumnDefinition Width="*"/>
                <!-- 右侧预览区（固定宽度） -->
            </Grid.ColumnDefinitions>

            <!-- 用户设置模块 -->
            <views:UserSettingsView Grid.Column="0" Margin="0,0,10,0"/>

            <!-- 内容设置模块 -->
            <views:ContentSettingsView Grid.Column="1" Margin="5,0"/>

            <!-- 预览模块 - 使用固定宽度 -->
            <views:MomentPreviewView Grid.Column="2" Margin="10,0,0,0"/>
        </Grid>

        <!-- 底部状态栏 -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <TextBlock Text="准备就绪" Margin="15,0" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>